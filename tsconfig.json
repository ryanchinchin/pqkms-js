{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "useDefineForClassFields": true,
    "outDir": "lib",
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "removeComments": true
  },

  "files": [
      "src/auth_base.ts",
      "src/index.ts",
      "src/enclave_signer.ts",
      "src/oprf.ts",
      "src/utils.ts",
      "src/login.ts",
      "src/registration.ts"
  ]
}
